<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.yablonski.majordom" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="com.github.yablonski.majordom.CoreApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.github.yablonski.majordom.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.BookActivity"
            android:label="@string/title_activity_book" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.AsyncTaskLoaderActivity"
            android:label="@string/title_activity_async_task_loader" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.VkLoginActivity"
            android:label="@string/title_activity_vk_login" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.SocialActivity"
            android:label="@string/title_activity_social" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.FragmentActivity"
            android:label="@string/title_activity_fragment" >
            <intent-filter>
                <action android:name="android.intent.action.showfragments" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.DetailsActivity"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.github.yablonski.majordom.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
    </application>

</manifest>
