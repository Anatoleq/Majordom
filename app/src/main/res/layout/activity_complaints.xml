<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.yablonski.majordom.ComplaintsActivity">

    <TextView android:text="Please write your complaint here.\nWe will solve it as soon as possible."
        android:maxLines="2"
        android:singleLine="false"
        android:id="@+id/titleComplaintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/descriptionComplaintEditText"
        android:layout_below="@+id/titleComplaintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/sendComplaintButton"
        android:text="Send"
        android:layout_below="@+id/descriptionComplaintEditText"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
